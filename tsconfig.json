{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "module": "esnext",
      "target": "es5",
      "lib": ["es2015", "dom"],
      "types": ["node"],
      "jsx": "react",
      "moduleResolution": "node",
      "sourceMap": false,
      "allowJs": true,
      "strict": true,
      "declaration": true,
      "esModuleInterop": true,
      "outDir": "dist/"
  },
  "exclude": ["src/**/__tests__/**", "src/**/__mocks__/**", "*/stories.ts"]
}